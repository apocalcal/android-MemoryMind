<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            android:textAlignment="center">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/hakgyoansimb"
                android:textSize="26sp"
                android:textColor="@color/black"
                />
        </androidx.appcompat.widget.Toolbar>
        <!-- 제목 -->
        <TextView
            style="@style/titleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="커스텀 질문 만들기" />
        <!-- 질문 유형 선택 -->
        <RadioGroup
            android:id="@+id/questionTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <RadioButton
                android:id="@+id/radioSubjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="주관식"
                android:textSize="24sp"
                android:fontFamily="@font/hakgyoansimr"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioObjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="객관식"
                android:textSize="24sp"
                android:fontFamily="@font/hakgyoansimr" />
        </RadioGroup>
        <!-- 질문 입력 -->
        <TextView
            android:id="@+id/questionText"
            style="@style/subtitleStyle"
            android:textSize="21sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="가족에게 전달할 질문을 만들어주세요." />
        <EditText
            android:id="@+id/questionEdit"
            style="@style/edittextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="질문을 입력하세요." />
        <!-- 정답 입력 -->
        <TextView
            android:id="@+id/answerText"
            style="@style/subtitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="21sp"
            android:text="질문의 정답을 입력해주세요." />

        <EditText
            android:id="@+id/answerEdit"
            style="@style/edittextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="정답을 입력하세요." />
        <!-- 객관식 옵션 입력 -->
        <LinearLayout
            android:id="@+id/objectiveOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">
            <EditText
                android:id="@+id/option1"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="옵션 1" />
            <EditText
                android:id="@+id/option2"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="옵션 2" />

            <EditText
                android:id="@+id/option3"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="옵션 3" />

            <EditText
                android:id="@+id/option4"
                style="@style/edittextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="옵션 4" />
        </LinearLayout>
        <!-- 버튼들 -->
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:background="@drawable/selectedbutton"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/hakgyoansimb"
            android:layout_marginVertical="10dp" />
    </LinearLayout>
</ScrollView>
